<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_mypage_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:background="@drawable/bg_mypage_button">

    <!-- 人型アイコン -->
    <ImageView
        android:id="@+id/img_mypage_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_person"
        app:tint="@android:color/white"
        android:contentDescription="@string/mypage_icon" />

    <!-- 「マイページ」テキスト -->
    <TextView
        android:id="@+id/text_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_mypage"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:textSize="16sp" />
</LinearLayout>
