<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 店舗名を表示する TextView (storeName) -->
        <TextView
            android:id="@+id/textStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店舗名"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- クーポンタイトル -->
        <TextView
            android:id="@+id/textCouponTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="クーポンタイトル"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />

        <!-- 割引内容 -->
        <TextView
            android:id="@+id/textCouponDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="割引内容"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:paddingTop="4dp" />

        <!-- limitフィールドを表示する箇所 -->
        <TextView
            android:id="@+id/textCouponLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="クーポン期限"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="4dp" />

        <!-- クーポンを使用するボタン -->
        <Button
            android:id="@+id/buttonUseCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="クーポンを使用する"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
