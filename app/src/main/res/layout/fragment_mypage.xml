<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 現在のユーザー名を表示するテキスト -->
    <TextView
        android:id="@+id/textCurrentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザー名: "
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <!-- 現在のメールアドレスを表示するテキスト -->
    <TextView
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メールアドレス: "
        android:textSize="16sp"
        android:paddingBottom="16dp"/>

    <!-- 新しいユーザー名を入力するためのEditText -->
    <EditText
        android:id="@+id/editNewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="新しいユーザー名を入力"
        android:layout_marginBottom="16dp"/>

    <!-- ユーザー名を変更するボタン -->
    <Button
        android:id="@+id/buttonChangeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザー名を変更"
        android:layout_marginBottom="16dp"/>

    <!-- ログアウトボタン -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ログアウト"
        android:layout_marginBottom="16dp"/>

    <!-- アカウント削除ボタン -->
    <Button
        android:id="@+id/buttonDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウント削除"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
