<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 「マイページ」というタイトルを中央に配置 -->
    <TextView
        android:id="@+id/textMyPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="マイページ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- 以下、残りの内容は変更せず -->
    <TextView
        android:id="@+id/textCurrentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザー名: "
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メールアドレス: "
        android:textSize="16sp"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/editNewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="新しいユーザー名を入力"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonChangeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザー名を変更"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ログアウト"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウント削除"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
